<!-- Banner Section Begin -->
    
<div class="banner__slider owl-carousel" style="    padding: 0px 0 0;" >
    <% for(let i=0;i<bannerData.length;i++){%> 
        <section class="banner set-bg" data-setbg="<%=bannerData[i].bannerImage %>">
                   <div class="col-xl-7 col-lg-8 m-auto">
                    <div class="banner__slider">
                        <div class="banner__item">
                            <div class="banner__text" >
                                <span><%= bannerData[i].subHeading %></span>
                                <h1><%= bannerData[i].mainHeading %></h1>
                                <p><%= bannerData[i].description %></p>
                                <a href="/shop">Shop now</a>
                            </div>
                        </div>                                   
                       </div> 
                   </div>          
</section>
<% } %>  
</div> 






<!-- Product Section Begin -->
<section class="product spad"id="reloadDiv" >
    <div class="container"  id="load">
    
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>New product</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">All</li>                 
                </ul>
            </div>
        </div>

        <div class="row property__gallery" >
        
        <% for(let i=0;i<productData.length;i++){%>

            <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                <div class="product__item" >
                    <div style="background-image: url(<%=productData[i].productimage[0]%>);"  class="product__item__pic set-bg" data-setbg="<%=productData[i].productimage[0]%>">
                        <ul class="product__hover">
                            <% if(user){ %>
                            <% if(user && user.wishlist && user.wishlist.includes(productData[i]._id)) { %>
                                <li><a  href="/removewishlist?id=<%= productData[i]._id%>"><span><img  style="max-width: 50%;" src="/public/img/filled-like.png" alt=""></span></a></li>
                              <% } else { %>
                                <li><a onclick="addToWishlist('<%= productData[i]._id%>')" href="#" data-productid="<%= productData[i]._id %>">
                                   <span><img style="max-width: 50%;" src="/public/img/unfilled-like.png" alt=""></span>
                                 </a></li>
                              <% } %>
                            <li><a onclick="addToCart('<%= productData[i]._id%>')"><span class="icon_bag_alt"></span></a></li>
                        <% }else{ %>
                           <li><a  href="/login">
                               <span><img style="max-width: 50%;" src="/public/img/unfilled-like.png" alt=""></span>
                             </a></li>
                            <li><a href="/login"><span class="icon_bag_alt"></span></a></li>
                            <% } %>
                           </ul>
                    
                       
                    </div>
                    <div class="product__item__text">
                        <h6><%=productData[i].productname %></h6>
                        
                        <div class="product__price"><%=productData[i].price %></div>
                        <div><a href="/productdetail?id=<%=productData[i]._id %>" class="btn btn-danger" style="color:rgb(247, 247, 247)">Details</a></div>
                    </div>
                </div>
            </div>
           <% } %>
        </div>
    </div>
</section>







