<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <h6 class="coupon__link"><span class="icon_tag_alt"></span> <a href="#">Have a coupon? Use coupon for expiriance new offers </a></h6>
            </div>
        </div>
        <form action="/editAddress?index=<%= index %>" method="post" class="checkout__form">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 align-items-center">
                    <h5>Billing detail</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Name <span>*</span></p>
                                <input name="name" type="text" value="<%= address.name %>">
                            </div>
                        </div>
                       
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Country <span>*</span></p>
                                <input  name="country" type="text" value="<%= address.country %>" >
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>District <span>*</span></p>
                                    <input  name="district" type="text" value="<%= address.district%>">
                                </div>
                            <div class="checkout__form__input">
                                <p>Address <span>*</span></p>
                                <input type="text" name="address" placeholder="Street Address" value="<%= address.address %>">
                             
                            </div>
                            <div class="checkout__form__input">
                                <p>Town/City <span>*</span></p>
                                <input type="text" name="city" value="<%= address.city%>">
                            </div>
                            <div class="checkout__form__input">
                                <p>State <span>*</span></p>
                                <input type="text" name="state" value="<%= address.state%>">
                            </div>
                            <div class="checkout__form__input">
                                <p>Postcode/Zip <span>*</span></p>
                                <input type="number" name="zip" value="<%= address.zip%>">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Phone <span>*</span></p>
                                <input type="tel" name="mobile" value=" <%= address.mobile%>">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email <span>*</span></p>
                                <input type="email" name="email" value="<%= address.email%>">
                            </div>
                        </div>
                        </div>  
                    </div>
                    <button type="submit" class="site-btn">Submit</button>
                    
             <% if(typeof message !== 'undefined'){%>
                <p style="
                font-size: small;
                color: red;
                font-family: 'Tilt Warp', cursive;
              " class="ms-3">
              <%= message %>
            </p>

            <% } %>
              <% if(typeof msg !=='undefined' ){ %>

                <p style="
                font-size: small;
                color: rgb(0, 61, 3);
                font-family: 'EB Garamond', serif;
              " class="ms-3">
                  <%= msg %>
                </p>

                <% } %>
                </div>
               

            </form>
        </div>
    </section>

<% include('../Layouts/userFooter.ejs') %>