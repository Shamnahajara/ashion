<main id="main" class="main">

    <div class="pagetitle">
      <h1>Add Products</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/dashboard">dashboard</a></li>
          <li class="breadcrumb-item">product</li>
          <li class="breadcrumb-item active">add-product</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-6">

        

        </div>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Products</h5>
              <!-- Floating Labels Form -->
              <form class="row g-3" method="post" action=""  enctype="multipart/form-data">             
                  <div class="col-md-8">
                    <div class="d-flex " >
                      <% for(let i=0; i<productData.productimage.length;i++){ %>
                        <div >
                          <img style="width:150px; height: 150px; margin-right: 20px;" src="<%=productData.productimage[i] %>" alt="Profile">
                          <div class="pt-2">
                            <a href="/admin/deleteimage?index=<%= i %>&productId=<%=productData._id%>" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                          </div>
                        </div>
                        <% } %>
                    </div>
                  </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" name="productname" class="form-control" id="floatingName" placeholder="name" value="<%=productData.productname%>" required>
                    <label for="floatingName">Product Name</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <input type="text" name="price" class="form-control" id="floatingPassword" placeholder="Price" value="<%=productData.price%>" required>
                    <label for="floatingPassword">Price</label>
                  </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                      <div class="form-floating">
                        <input type="text" name="quantity" class="form-control" id="floatingCity" placeholder="Quantity" value="<%=productData.quantity%>" required>
                        <label for="floatingCity">Quantity</label>
                      </div>
                    </div>
                  </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                      <select name="category" class="form-select" id="floatingSelect" aria-label="select catogery" required>
                        <% for(let i=0;i<categoryData.length;i++){%>
                            <option  value="<%=categoryData[i]._id%>"><%=categoryData[i].catogoryname%></option>
                         <% } %>
                        </select>
                        <label for="floatingSelect">select category</label>
                      </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                          <select name="brand" class="form-select" id="floatingSelect" aria-label="select brand" value="" required>
                            <% for(let i=0;i<brandData.length;i++){%>
                                <option  value="<%= brandData[i]._id%>"><%= brandData[i].brandname%></option>
                             <% } %>
                            </select>
                            <label for="floatingSelect">select brand</label>
                          </div>
                        </div>                                  
                  <div class="col-lg-6">
                   <div class="col-lg-6">
                    <label for="inputNumber" class="col-sm-10">product image</label>
                   </div>
                    <div class="col-lg-12">
                      <input   accept="image/*" class="form-control " name="productimage"  multiple type="file" id="formFile" value="" >
                    </div>
                  </div>
                <div class="col-12">
                    <div class="form-floating">
                      <textarea class="form-control" name="description" placeholder="Description" id="floatingTextarea" value=" " style="height: 100px;"><%=productData.description%></textarea>
                      <label for="floatingTextarea">Description</label>
                    </div>
                  </div>
                  <input type="hidden" name="id" value="<%= productData._id %>">
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Save changes</button>
                  <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
              </form><!-- End floating Labels Form -->
              <% if(typeof message !== 'undefined'){%>
                         
                <p style="color: green;"><%= message %></p>
                
                <% } %>

            </div>
          </div>

        </div>
      </div>
    </section>

