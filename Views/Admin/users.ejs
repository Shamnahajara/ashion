        <section class="section">
          <div class="row">
            <div class="col-lg-12">
    
              <div class="card">
                <div class="card-body">
                
                 
    
                  <!-- Table with stripped rows -->
                  <table class="table datatable">
                    <thead>
                      <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Actions</th>
                     
                      </tr>
                    </thead>
                    <%   for(let i=0;i<users.length;i++){%>
                    <tbody>
                         
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= users[i].name%></td>
                        <td><%= users[i].email%></td>
                        <td><%= users[i].mobile%></td>
                        <td>
                            <%if(users[i].status === 0){%>
                                <a href="/admin/block?id=<%= users[i]._id %>" class="btn btn-outline-danger">Block</a>

                           <% }else{ %>
                                <a href="/admin/block?id=<%= users[i]._id %>" class="btn btn-outline-primary">unblock</a>
                            <% } %>
                        </td>
                      </tr>    
                    </tbody>
                    <% } %>
                  </table>
                </div>
