    <section class="section">
      <div class="row">
        <div class="col-lg-12">
<div class="card">
    <div class="card-body">
      <h5 class="card-title">Coupon lists</h5>

      <!-- Table with stripped rows -->
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Code</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scop="col">maxDiscount</th>
            <th scope="col">minAmount</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
    
           <tbody>
            <% if (couponData.length > 0) { %>
                <% for (let i = 0; i < couponData.length; i++) { %>
                    <tr>
                        <th scope="row"><%= i + 1 %></th>
                        <td><%= couponData[i].couponName %></td>
                        <td><%= couponData[i].couponCode %></td>
                        <td><%= couponData[i].startDate.toDateString() %></td>
                        <td><%= couponData[i].endDate.toDateString() %></td>
                        <td><%= couponData[i].maxDiscount %></td>
                        <td><%= couponData[i].minAmount %></td>
                        <%if(couponData.status === 0){%>
                            <td>active</td>

                       <% }else{%>
                        <td>Inactive</td> 
                     <%  } %>
                        <td>
                            <% if(couponData[i].status==1){%>
                                <a href="/admin/couponUnlist?id=<%= couponData[i]._id %>" style="margin-bottom: 2px;" class="btn-success btn sm">list</a>
                           <% }else{%>
                                <a href="/admin/couponUnlist?id=<%= couponData[i]._id %>" style="margin-bottom: 2px;" class="btn-warning btn sm">Unlist</a>
                          <% } %>
                        <a href="/admin/deleteCoupon?id=<%= couponData[i]._id %>" style="margin-bottom: 2px;" class="btn-danger btn sm">Delete</a>
                        <a href="/admin/editCoupon?id=<%= couponData[i]._id   %>" class="btn-primary btn sm">Edit</a>
                        </td>
                    </tr>
                <% } %>
            <% }else{%>

              <tr>
                <td>No more coupons added</td>
             </tr>

         <% } %>
        </tbody>
        
      </table>
      <!-- End Table with stripped rows -->

