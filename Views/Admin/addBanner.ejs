      <div class="row">
        <div class="col-lg-12">
<div class="card">
    <div class="card-body">
      <h5 class="card-title">A new banner</h5>

      <!-- Floating Labels Form -->
      <form class="row g-3" method="post" enctype="multipart/form-data">
      
        <div class="col-md-6">
          <div class="form-floating">
            <input name="mainheading" type="text" class="form-control" id="floatingEmail" placeholder="main heading">
            <label for="floatingEmail">Main Heading</label>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-floating">
            <input name="subheading" type="text" class="form-control" id="floatingPassword" placeholder="sub heading">
            <label for="floatingPassword">Sub Heading</label>
          </div>
        </div>
        <div class="col-6">
          <div class="form-floating">
            <textarea name="description" class="form-control" placeholder="description" id="floatingTextarea" style="height: 100px;"></textarea>
            <label for="floatingTextarea">Description</label>
          </div>
        </div>
        <div class="col-6">
          <div class="form-floating">
            <input accept="image/*" class="form-control " name="bannerImage"  type="file" >
            <label for="floatingTextarea">Banner image</label>
          </div>
        </div>
      
      
     
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
      </form><!-- End floating Labels Form -->

