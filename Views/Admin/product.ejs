<main id="main" class="main">

    <div class="pagetitle">
      <h1>Products</h1>
      <p style="text-align: end;" ><a href="/Admin/addProduct">Add Products+</a></p>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Product</li>
          <li class="breadcrumb-item active">product list</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">products</h5>
             

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(products.length > 0){ %>
                    <% for(let i=0;i<products.length;i++){ %>
    
                      <tr>
                        <th scope="row"><%=i+1%></th>
                        <td><img style="height: 48px; width: 48px;" src="<%=products[i].productimage[0]%>" alt=""></td>
                        <td><%=products[i].productname%></td>
                        <% if(products[i].status===0){ %>
                          <td><span class="badge bg-success">active </span></td>
                          <% } else { %>
                            <td><span class="badge bg-danger">not active </span></td>
                         <% } %>
                        <td><a class="btn btn-primary " style="font-size: small;" href="/admin/viewProduct?id=<%=products[i]._id%>">View</a>
                          <a  class="btn btn-success" style="font-size: small;" href="/admin/editProduct?id=<%=products[i]._id%>">Edit</a>
                          <%if(products[i].status === 0){%>
                            <a  class="btn btn-danger" style="font-size: small;" href="/admin/unlist?id=<%=products[i]._id%>">Unlist</a>
          
                       <% }else{ %>
                          <a  class="btn btn-danger" style="font-size: small;" href="/admin/unlist?id=<%=products[i]._id%>">list</a>
                        <% } %>
                          </td>

                      </tr>
    
                   <% } %>
    
                 <% } %>

                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>


